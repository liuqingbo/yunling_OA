<% use_names.each do |use| %>
  <%= f.radio_button 'use', use %>
  <% if use == I18n.t('init_data.application.use.other') %>
    <%= f.text_field :use, :size => "12", :value => I18n.t('init_data.application.use.other'), :class=>"hidden_unless_select_other" %>
  <%else%>
    <%= use%>
  <% end %>
<% end %>
