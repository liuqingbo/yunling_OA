<% content_for :right do %>

  <h5 style="margin-bottom:1.0em;"><%= I18n.t 'side_bar.daily_office.communicate_message_manage'%></h5>
  <ul class="flat" style="margin-top:1em;">
    <li>
      <%= link_to  I18n.t('side_bar.daily_office.inbox') + "(#{current_user.receive_messages.communicate_messages.unread.size})", 
      communicate_messages_path(:params=>{:flag=>"receive"}) %>
    </li>
    <li>
      <%= link_to  I18n.t('side_bar.daily_office.outbox') , 
      communicate_messages_path(:params=>{:flag=>"send"}) %>
    </li>
    <li>
      <%= link_to  I18n.t('side_bar.daily_office.prompt_msg') + "(#{current_user.receive_messages.prompt_messages.unread.size})", 
      prompt_messages_path %>
    </li>
  </ul>
  <hr/>

  <h5 style="margin-bottom:1.0em;"><%= I18n.t 'side_bar.daily_office.unprocessed_application'%></h5>

  <ul class="flat" style="margin-top:1em;">
    <li><%= link_to   I18n.t('side_bar.daily_office.unprocessed_application') + "(#{current_user.receive_applications.pending.size})" , application_receivers_path%></li>
  </ul>

  <h5 style="margin-bottom:1.0em;"><%= I18n.t 'side_bar.daily_office.admin_application'%></h5>

  <ul class="flat" style="margin-top:1em;">
    <li><%= link_to   I18n.t('activerecord.models.leave_application') , leave_applications_path %></li>
  </ul>

  <h5 style="margin-bottom:1.0em;"><%= I18n.t 'side_bar.daily_office.finance_application'%></h5>

  <ul class="flat" style="margin-top:1em;">
    <li><%= link_to   I18n.t('activerecord.models.expense_application') , expense_applications_path %></li>
  </ul>
    
<% end %>