<%= render 'side_bar/finance_affaire_side_bar' %>
<h1 style="margin-top:0;">
  <%= I18n.t "views_expense_application.expense_application" %>
</h1>
<p class="subtitle">
  <%= I18n.t "views_expense_application.total_application_prompt" %>:&nbsp;
  <%= @expense_applications.size %>
</p>

<table border="0" cellspacing="0" cellpadding="0" class="wide notices">
  <tr>
    <th width="20%" class="la">
      <%= I18n.t 'activerecord.attributes.application.sender' %>
    </th>
    <th width="20%" class="la">
      <%= I18n.t 'activerecord.attributes.application.item_name' %>
    </th>
    <th width="20%" class="la">
      <%= I18n.t 'activerecord.attributes.application.sum' %>
    </th>
    <th width="20%" class="la">
      <%= I18n.t 'activerecord.attributes.application.use' %>
    </th>
    <th width="20%" class="la">
      <%= I18n.t 'activerecord.attributes.message.state' %>
    </th>
  </tr>
  <% @expense_applications.each do |application| %>
    <tr>
      <td><%= application.sender_real_name%></td>
      <td><%= link_to application.item_name, finance_expense_application_path(application), :class => "admin"%></td>
      <td><%= application.sum%></td>
      <td><%= application.use%></td>
      <td>
        <%= application.get_receivers_opinion%>
      </td>
    </tr>
  <% end %>
</table>

