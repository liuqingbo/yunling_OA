<%= render 'side_bar/daily_office_side_bar' %>
<%= form_for @leave_application do |f| %>
  <% if @leave_application.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@leave_application.errors.count, "error") %>prohibited this user from being saved:</h2>
      <ul>
        <% @leave_application.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <label for="title" >
      <h2><%= I18n.t 'activerecord.attributes.application.title' %></h2>
    </label>
  </p>

  <p>
    <label for="start_date" >
      <%= I18n.t 'activerecord.attributes.application.start_time' %>:&nbsp;
    </label>
    <%= f.text_field :start_date, :class => "timepicker", :size => '15' %>&nbsp;&nbsp;
    <label for="end_date" >
      <%= I18n.t 'activerecord.attributes.application.end_time' %>:&nbsp;
    </label>
    <%= f.text_field :end_date, :class => "timepicker", :size => '15' %>
  </p>

  <p>
    <label for="content"><%= I18n.t 'activerecord.attributes.application.content'%>:
    </label><br/>
    <%= f.text_area :content, :size => "60x10" %>
  </p>

  <p><%= submit_tag I18n.t('operate.commit') %></p>
<% end %>

<%= link_to I18n.t('operate.back'), leave_applications_path %>
